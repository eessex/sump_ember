<div class="presenter show">
<h4 class="title"><a href="/presenters">Presenters</a> : {{model.name}}</h4>
{{show-presenter presenter=model}}

<h4 class="events-list">Events organized by {{model.name}}  <i class="fa fa-sort-desc"></i></h4>
<ul class="index">
  {{#each model.events as |event|}}
    <li class="reveal" id="{{event.id}}" {{action 'viewMore' event}}>
    <div class="header">
      <div class="date">
          {{formatDate "MMM DD YYYY @ h.mma" event.date}}
        </div>
        <div class="title">
       
           <span class="presenter">
            {{event.presenter.name}} Presents:
          </span>
    
          {{event.name}}
        </div>
      </div>
      <div class="toggle-it">+</div>
      {{#if event.showDetails}}
        {{show-event event=event}}
      {{/if}}
    </li>
  {{/each}}
</ul>
</div>

{{#if session.isAuthenticated}}
<button id='edit' {{action 'edit'}}>Edit</button>
<button id='delete' {{action 'delete'}}>Delete</button>
{{/if}}