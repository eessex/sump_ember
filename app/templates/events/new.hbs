<form>
<h1>Create an Event</h1>
  <div>
    <label for="name">Title</label>
    {{input value=model.name id="name"}}
  </div>

  <div>
    <label for="presenter">Presenter</label>
    {{all-presenters presenters=model.presenters}}
    {{input type="hidden" value=model.presenterId id="id"}}
  </div>

  <div>
    <label for="date">Date</label>
    {{input value=model.date id="date"}}
  </div>

  <div>
    <label for="price">Price</label>
    {{input value=model.price id="price"}}
  </div>

  <div class="artists">
    <label for="artist">Artists</label>
    {{all-artists artists=model.artists}}
    {{input type="hidden" value=model.artists id="artist"}}
  </div>

  <div>
    <label for="description">Description</label>
    {{textarea value=model.description id="description"}}
  </div>

  <button {{action 'save'}} id="submit" class="btn">Save</button>
</form>
